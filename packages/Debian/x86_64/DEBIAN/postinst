##--------------------------------------------------------------------
##
## @postinst DEBIAN/postinst
## This script is used to execute post installation tasks.
##
## Author: Ashish Jabble
##
##--------------------------------------------------------------------

set -e

set_files_ownership () {
    chown -R root:root /usr/local/foglamp/python/foglamp/plugins/north/http
}

# TODO: remove this once we have addTask REST endpoint
run_sql () {
    # add plugin loader configuration
    # add_destination_and_stream
    # add stats key
    # add process to schedule
    sqlite3 /usr/local/foglamp/data/foglamp.db < /usr/local/foglamp/data/cmds-http-north.sql
}

add_enabled_schedule () {
    output=$(curl -d '{"type": 3, "name": "HTTP Sender", "process_name": "North HTTP", "repeat": "15", "exclusive": "t", "enabled": "t"}' -X POST http://localhost:8081/foglamp/schedule)
    echo $output
}

set_files_ownership
run_sql
add_enabled_schedule
echo "HTTP north plugin is installed."
